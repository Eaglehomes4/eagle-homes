public function storeUtilities(Request $request) 
{
    $data = $request->validate([
        'house_id' => 'required',
        'water' => 'required|numeric',
        'electricity' => 'required|numeric',
        'garbage' => 'required|numeric',
    ]);

    // 1. Record the utility bill
    $bill = UtilityBill::create($data + ['secretary_id' => auth()->id()]);

    // 2. Trigger Digital Ledger Engine
    // Automatically deducts from existing credit or adds to arrears
    $this->ledgerService->recalculateBalance($request->house_id);

    return back()->with('success', 'Utilities updated and ledger balanced!');
}
